<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kavin.artgallery.ui.gallery.GalleryFragment"
        android:label="@string/screen_home_title_str"
        tools:layout="@layout/gallery_fragment">
        <action
            android:id="@+id/action_galleryFragment_to_photoDetailsFragment"
            app:destination="@+id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.kavin.artgallery.ui.photodetails.PhotoDetailsFragment"
        android:label="@string/screen_photo_details_title_str"
        tools:layout="@layout/photo_details_fragment">
    </fragment>
</navigation>